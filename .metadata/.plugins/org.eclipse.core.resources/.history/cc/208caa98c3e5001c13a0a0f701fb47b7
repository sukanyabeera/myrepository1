package com.Exceptions;

class OfficeFurniture{
	int price;
	String color;
	String brand;
	int discount;
	int discountpercent;
	
	OfficeFurniture(int price,int discountpercent){
		this.price=price;
		this.discountpercent=discountpercent;
	}
	
	public void discount() {
		//if the number is divided by 0 then occures arithmetic Exception
		discount=price/discountpercent;
		System.out.println("you got "+discountpercent+"% ie. "+discount );
		
	}
}

public class ArithmeticException {

	public static void main(String[] args) {
		//
		OfficeFurniture furni=new OfficeFurniture(10,0);
		furni.discount();
	

	}

}
