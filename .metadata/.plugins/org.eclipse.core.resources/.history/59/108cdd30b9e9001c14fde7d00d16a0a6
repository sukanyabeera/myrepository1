		PreparedStatement prepare=connection.prepareStatement("select * from furniture");
		ResultSet result=prepare.executeQuery();
		
		while(result.next()) {
			System.out.println(result.getString(1)+"     "+result.getInt(2)+"      "+result.getString(3)+
